<Window x:Class="ACT.MPTimer.MPTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MPTimerWindow" Height="300" Width="300"
        AllowsTransparency="True" WindowStyle="None" Opacity="1" Background="{x:Null}">
    <Grid>

        <Canvas
            x:Name="ProgressBarCanvas"
            Height="21"
            VerticalAlignment="Top"/>

        <TextBlock
            x:Name="RecastTimeTextBlock"
            Text="2.9"
            Padding="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            TextAlignment="Right"
            Margin="216,189,0,0"
            TextWrapping="NoWrap">
        </TextBlock>
    </Grid>
</Window>
